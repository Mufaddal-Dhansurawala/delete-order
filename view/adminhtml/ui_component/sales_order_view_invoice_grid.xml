<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="md_delete_invoices"
                    class="MD\DeleteOrders\Ui\Component\Control\DeleteGridAction">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="deleteAction" xsi:type="string">deleteorder/invoice/massDelete</item>
                    </item>
                </argument>
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected Invoice(s)?</message>
                        <title translate="true">Delete Invoices</title>
                    </confirm>
                    <type>delete_invoices</type>
                    <label translate="true">Delete Invoices</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
